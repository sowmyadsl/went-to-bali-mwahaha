<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
<div class="well">
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <br>
  <br>
  <%= f.submit "Submit" %>
</div>
<% end %>
<br>
<%= link_to 'Go Back', products_path %>
